{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">Reset your password</h4>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock text-primary" style="font-size: 3rem;"></i>
                    </div>
                    
                    <p class="text-center mb-4">Please enter your new password below</p>
                    
                    {{ form_start(resetForm) }}
                        {# First password field #}
                        <div class="mb-3">
                            {{ form_label(resetForm.plainPassword.first, 'New Password', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(resetForm.plainPassword.first, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Enter your new password'
                                }
                            }) }}
                            {{ form_errors(resetForm.plainPassword.first) }}
                            
                            <div class="form-text text-muted mt-2">
                                <div class="d-flex align-items-center mb-1">
                                    <i class="bi bi-info-circle me-2 text-primary"></i>
                                    <span>Your password should:</span>
                                </div>
                                <ul class="ps-4 mb-0 small">
                                    <li>Be at least 8 characters long</li>
                                    <li>Include letters and numbers</li>
                                </ul>
                            </div>
                        </div>
                        
                        {# Second password field (confirmation) #}
                        <div class="mb-3">
                            {{ form_label(resetForm.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                            {{ form_widget(resetForm.plainPassword.second, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Confirm your new password'
                                }
                            }) }}
                            {{ form_errors(resetForm.plainPassword.second) }}
                        </div>
                        
                        {# Display any global errors for the repeated field #}
                        {{ form_errors(resetForm.plainPassword) }}

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Reset password
                            </button>
                        </div>
                    {{ form_end(resetForm) }}
                    
                    <div class="text-center mt-4">
                        <a href="{{ path('app_login') }}" class="text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i> Back to login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        border: none;
        overflow: hidden;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .btn-primary {
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    
    .form-control {
        padding: 0.5rem 0.75rem;
        font-size: 0.95rem;
    }
    
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    
    .invalid-feedback {
        font-size: 0.875rem;
        color: #dc3545;
        margin-top: 0.25rem;
    }
    
    ul.ps-4 li {
        margin-bottom: 0.25rem;
    }
    
    .fw-semibold {
        font-weight: 600;
    }
</style>
{% endblock %}