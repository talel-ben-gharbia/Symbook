{% extends 'layout.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
{% if items is empty %}
    <div class="empty-cart text-center py-5 bg-light rounded-3">
        <i class="bi bi-cart-x display-4 text-muted mb-3"></i>
        <h3 class="text-muted">Your cart is empty</h3>
        <p class="text-muted">Start shopping to add items to your cart</p>
        <a href="{{ path('app_book_public_index') }}" class="btn btn-primary mt-3">
            <i class="bi bi-arrow-left"></i> Continue Shopping
        </a>
    </div>
{% else %}
    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="ps-4">Product</th>
                            <th scope="col">Title</th>
                            <th scope="col">Author</th>
                            <th scope="col">Price</th>
                            <th scope="col">Qty</th>
                            <th scope="col">Total</th>
                            <th scope="col" class="pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for item in items %}
                        <tr class="align-middle">
                            <td class="ps-4">
                                <img src="{{ item.book.imageUrl }}" class="rounded border" width="80" alt="{{ item.book.title }}">
                            </td>
                            <td class="fw-semibold">{{ item.book.title }}</td>
                            <td>{{ item.book.author }}</td>
                            <td>{{ item.book.price }} TND</td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="fw-semibold">{{ item.quantity }}</span>
                                </div>
                            </td>
                            <td class="fw-bold">{{ item.book.price * item.quantity }} TND</td>
                            <td class="pe-4">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a href="{{ path('cart_add', {id: item.book.id}) }}" class="btn" title="Add one">
                                        <i class="bi bi-plus-lg"></i>
                                    </a>
                                    <a href="{{ path('cart_decrement', {id: item.book.id}) }}" class="btn " title="Remove one">
                                        <i class="bi bi-dash-lg"></i>
                                    </a>
                                    <a href="{{ path('cart_remove', {id: item.book.id}) }}" class="btn " title="Remove item">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light border-0">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex gap-3">
                    <a href="{{ path('app_book_public_index') }}" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Continue Shopping
                    </a>
                    <a href="{{ path('cart_clear') }}" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Clear Cart
                    </a>
                </div>
                <div class="text-end">
                    <h4 class="mb-0">Total: <span class="text-primary">{{ total }} TND</span></h4>
                    <a href="{{path('add_order')}}" class="btn btn-primary mt-2">
                        <i class="bi bi-credit-card"></i> Add order
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endif %}

{% endblock %}