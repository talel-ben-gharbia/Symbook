{% extends 'layout.html.twig' %}

{% block title %}BookStore - Online Bookstore{% endblock %}

{% block body %}
    <section class="hero">
        <h1>Discover Your Next Favorite Book</h1>
        <p>Explore our vast collection of books across all genres</p>
        <a href="{{ path('app_book_public_index') }}" class="btn">Browse Collection</a>
    </section>

    <div class="container">
        <h2 class="section-title">Featured Books</h2>

        <div class="categories">
            <button class="category-btn active">All Books</button>
            {% for category in categories %}
                <button class="category-btn">{{ category.name }}</button>
            {% endfor %}
        </div>

        <div class="books-grid">
            {% for book in books %}
                <div class="book-card">
                    <div class="book-image">
                        <img src="{{ book.imageUrl }}" alt="{{ book.title }}">
                    </div>
                    <div class="book-info">
                        {% if book.category %}
                            <div class="book-category" style="display: none;">{{ book.category.name }}</div>
                        {% endif %}
                        <div class="book-title">{{ book.title }}</div>
                        <div class="book-author">{{ book.author }}</div>
                        <div class="book-price">${{ book.price }}</div>
                        <div class="book-description">{{ book.description|slice(0, 100) }}{% if book.description|length > 100 %}...{% endif %}</div>
                        <div class="book-actions">
                            <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-sm">View Details</a>
                            <button class="btn btn-sm">Add to Cart</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}