{% extends 'base.html.twig' %}

{% block title %}Admin Panel - Customer Management{% endblock %}

{% block stylesheets %}
    <style>
        :root {
            --bs-primary-rgb: 13, 110, 253;
            --bs-success-rgb: 25, 135, 84;
        }

        body {
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
        }

        .sidebar {
            background-color: #1a2332;
            min-height: 100vh;
        }

        .sidebar-link {
            color: rgba(255, 255, 255, 0.85);
            text-decoration: none;
            padding: 0.75rem 1rem;
            display: flex;
            align-items: center;
            transition: all 0.2s;
        }

        .sidebar-link:hover,
        .sidebar-link.active {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar-link i {
            margin-right: 0.75rem;
        }

        .status-badge {
            font-size: 0.75rem;
            font-weight: 500;
        }

        .status-completed {
            background-color: rgba(var(--bs-success-rgb), 0.1);
            color: rgb(var(--bs-success-rgb));
        }

        /* Customer management specific styles */
        .customer-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 10px;
        }

        .customer-table th {
            font-weight: 600;
            color: #333;
        }

        .customer-table td {
            vertical-align: middle;
            padding: 15px 10px;
        }

        .customer-name-cell {
            display: flex;
            align-items: center;
        }

        .search-container {
            margin-bottom: 20px;
        }

        .export-btn {
            background-color: #0d6efd;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 500;
        }

        .view-details {
            color: #0d6efd;
            text-decoration: none;
        }

        .view-details:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block sidebar collapse" id="sidebarMenu">
            <div class="position-sticky pt-3">
                <div class="px-3 mb-3">
                    <h5 class="text-white">Admin Panel</h5>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="sidebar-link" href="{{ path('app_dashboard') }}">
                            <i class="bi bi-grid-1x2"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="sidebar-link" href="{{ path('app_book_index') }}">
                            <i class="bi bi-book"></i>
                            Books
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="sidebar-link" href="{{ path('app_order_index') }}">
                            <i class="bi bi-cart"></i>
                            Orders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="sidebar-link active" href="{{ path('app_user_index') }}">
                            <i class="bi bi-people"></i>
                            Customers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="sidebar-link" href="#">
                            <i class="bi bi-gear"></i>
                            Settings
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Customer Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <button type="button" class="btn btn-sm btn-outline-secondary d-md-none" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </div>

            <!-- Search and Export -->
            <div class="row search-container">
                <div class="col-md-9">
                    <input type="text" class="form-control" placeholder="Search customers..." aria-label="Search customers">
                </div>
                <div class="col-md-3 text-end">
                    <button class="export-btn">Export Data</button>
                </div>
            </div>

            <!-- Customer Table -->
            <div class="table-responsive">
                <table class="table customer-table">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Email</th>
                            <th>Orders</th>
                            <th>Total Spent</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <div class="customer-name-cell">
                                    <img src="https://ui-avatars.com/api/?name={{ user.username }}&background=random" alt="{{ user.username }}" class="customer-avatar">
                                    {{ user.username }}
                                </div>
                            </td>
                            <td>{{ user.email }}</td>
                            <td>{% if user.orders is defined %}{{ user.orders|length }}{% else %}0{% endif %}</td>
                            <td>${% if user.totalSpent is defined %}{{ user.totalSpent|number_format(2) }}{% else %}0.00{% endif %}</td>
                            <td>{% if user.createdAt is defined %}{{ user.createdAt|date('M j, Y') }}{% else %}N/A{% endif %}</td>
                            <td>
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="view-details">View Details</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">No customers found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </main>
    </div>
</div>
{% endblock %}