{% extends 'layout.html.twig' %}

{% block title %}Order Confirmation - Cash on Delivery{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
                <div class="card-header bg-success text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill fs-3 me-3"></i>
                        <h3 class="mb-0">Order Confirmed!</h3>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-cash-coin text-success display-1"></i>
                        </div>
                        <h4>Thank you for your order</h4>
                        <p class="text-muted">Your order has been placed successfully and will be delivered soon.</p>
                        <div class="alert alert-info d-inline-block mt-2">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-info-circle me-2"></i>
                                <span>Our delivery team will contact you shortly at <strong>{{ orderData.delivery_info.phone }}</strong> to confirm delivery details.</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="border-bottom pb-2">Order Details</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Order ID:</span>
                                    <span class="fw-bold">{{ order.id }}</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Date:</span>
                                    <span>{{ order.orderDate|date('d M Y, H:i') }}</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Payment Method:</span>
                                    <span class="badge bg-warning text-dark">Cash on Delivery</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Status:</span>
                                    <span class="badge bg-primary">{{ order.status|capitalize }}</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="border-bottom pb-2">Delivery Information</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Name:</span>
                                    <span>{{ order.customer.userName }}</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Email:</span>
                                    <span>{{ order.customer.email }}</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="text-muted">Phone:</span>
                                    <span>{{ orderData.delivery_info.phone }}</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-muted">Address:</span>
                                    <span class="text-end">{{ orderData.delivery_info.address }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <h5 class="border-bottom pb-2 mb-3">Order Summary</h5>
                    <div class="table-responsive mb-4">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in orderData.items %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="{{ item.imageUrl }}" alt="{{ item.title }}" class="me-3 rounded border" width="50" height="70" style="object-fit: cover;" onerror="this.src='https://via.placeholder.com/50x70?text=No+Image'">
                                            <div>
                                                <h6 class="mb-0">{{ item.title }}</h6>
                                                <small class="text-muted">{{ item.author }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>{{ item.price|number_format(2) }} TND</td>
                                    <td class="text-center">{{ item.quantity }}</td>
                                    <td class="text-end">{{ item.subtotal|number_format(2) }} TND</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="3" class="text-end">Subtotal:</td>
                                    <td class="text-end">{{ (order.total - 7)|number_format(2) }} TND</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end">Shipping:</td>
                                    <td class="text-end">7.000 TND</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Total:</td>
                                    <td class="text-end fw-bold fs-5 text-primary">{{ order.total|number_format(3) }} TND</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    
                    <div class="alert alert-warning">
                        <div class="d-flex">
                            <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                            <div>
                                <h6 class="alert-heading">Important Information</h6>
                                <p class="mb-0">Please have the exact amount ready for payment upon delivery. Our delivery person will provide you with a receipt.</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                        <div>
                            <p class="mb-0">Need help? <a href="#" class="text-decoration-none">Contact our support team</a></p>
                        </div>
                        <div>
                            <a href="{{ path('app_book_public_index') }}" class="btn btn-primary rounded-pill">
                                <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}