{% extends 'base.html.twig' %}

{% block title %}Admin Panel - Dashboard
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
	<style>:root
	{
		--dark-bg: #1a2332;
		--light-bg: #ffffff;
		--card-bg: #f8f9fa;
		--text-light: #ffffff;
		--text-dark: #000000;
		--completed: #e6f7ee;
		--completed-text: #10b981;
	}

	body {
		margin: 0;
		padding: 0;
		font-family: 'Inter', sans-serif;
		display: flex;
		min-height: 100vh;
	}

	.sidebar {
		width: 240px;
		background-color: var(--dark-bg);
		color: var(--text-light);
		padding: 20px 0;
		flex-shrink: 0;
		height: 100vh;
		position: fixed;
		z-index: 100;
	}

	.sidebar-title {
		font-size: 1.25rem;
		font-weight: 600;
		padding: 0 20px 20px;
		margin: 0;
	}

	.sidebar-nav {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.sidebar-nav li {
		margin-bottom: 5px;
	}

	.sidebar-nav a {
		display: flex;
		align-items: center;
		padding: 12px 20px;
		color: var(--text-light);
		text-decoration: none;
		transition: background-color 0.2s;
	}

	.sidebar-nav a:hover,
	.sidebar-nav a.active {
		background-color: rgba(255, 255, 255, 0.1);
	}

	.sidebar-nav a i {
		margin-right: 12px;
		font-size: 1.25rem;
		width: 20px;
		text-align: center;
	}

	.status-badge {
		font-size: 0.75rem;
		font-weight: 500;
	}

	.status-completed {
		background-color: rgba(var(--bs-success-rgb), 0.1);
		color: rgb(var(--bs-success-rgb));
	}
</style>{% endblock %}{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>{% endblock %}{% block body %}
<div class="container-fluid">
	<div
		class="row">
		<!-- Sidebar -->
		<div class="col-md-3 col-lg-2 d-md-block sidebar collapse" id="sidebarMenu">
			<div class="position-sticky pt-3">
				<div class="px-3 mb-3">
					<h5 class="text-white">Admin Panel</h5>
				</div>
				<ul class="nav flex-column sidebar-nav">
					<li class="nav-item">
						<a class="sidebar-link active" href="{{ path('app_dashboard') }}">
							<i class="bi bi-grid-1x2"></i>
							Dashboard
						</a>
					</li>
					<li class="nav-item">
						<a class="sidebar-link" href="{{ path('app_book_index') }}">
							<i class="bi bi-book"></i>
							Books
						</a>
					</li>
					<li class="nav-item">
						<a class="sidebar-link" href="{{ path('app_category_index') }}">
							<i class="bi bi-book"></i>
							Categories
						</a>
					</li>
					<li class="nav-item">
						<a class="sidebar-link" href="{{ path('app_order_index') }}">
							<i class="bi bi-cart"></i>
							Orders
						</a>
					</li>
					<li class="nav-item">
						<a class="sidebar-link" href="{{ path('app_user_index') }}">
							<i class="bi bi-people"></i>
							Customers
						</a>
					</li>
					<li class="nav-item">
						<a class="sidebar-link" href="#">
							<i class="bi bi-gear"></i>
							Settings
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Main content -->
		<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 offset-md-3 offset-lg-2">
			<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
				<h1 class="h2">Dashboard Overview</h1>
				<div class="btn-toolbar mb-2 mb-md-0">
					<button type="button" class="btn btn-sm btn-outline-secondary d-md-none" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
						<i class="bi bi-list"></i>
					</button>
				</div>
			</div>

			<!-- Stats Cards -->
			<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-4">
				<div class="col">
					<div class="card h-100">
						<div class="card-body">
							<h6 class="card-subtitle mb-2 text-muted">Total Sales</h6>
							<h2 class="card-title">0</h2>
						</div>
					</div>
				</div>
				<div class="col">
					<div class="card h-100">
						<div class="card-body">
							<h6 class="card-subtitle mb-2 text-muted">Orders</h6>
							<h2 class="card-title">0</h2>
						</div>
					</div>
				</div>
				<div class="col">
					<div class="card h-100">
						<div class="card-body">
							<h6 class="card-subtitle mb-2 text-muted">Customers</h6>
							<h2 class="card-title">0</h2>
						</div>
					</div>
				</div>
				<div class="col">
					<div class="card h-100">
						<div class="card-body">
							<h6 class="card-subtitle mb-2 text-muted">Products</h6>
							<h2 class="card-title">0</h2>
						</div>
					</div>
				</div>
			</div>
		</main>
	</div>
</div>{% endblock %}
